@model IEnumerable<Slider>


@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Inverse table</h4>
                <p class="card-description"></p>
                <div class="table-responsive">
                    <div class="create-btn my-3">
                        <a asp-area="AdminArea" asp-controller="Slider" asp-action="Create" class="btn btn-success btn-fw"><i class="mdi mdi-plus-box"></i></a>
                    </div>
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th>Image</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>
                                        <img src="~/img/@item.Image" alt="Slider" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-info btn-fw"><i class="mdi mdi-account-card-details"></i></button>
                                        <button type="button" class="btn btn-primary btn-fw"><i class="mdi mdi-table-edit"></i></button>
                                        <button type="button" class="btn btn-danger btn-fw"><i class="mdi mdi-delete-forever"></i></button>
                                    </td>
                                </tr>
                                count++;

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
